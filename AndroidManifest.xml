<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="info.brathen.flytid"
      android:versionCode="3"
      android:versionName="1.0.1">
    
      <application 
        android:icon="@drawable/icon" 
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" 
        android:allowClearUserData="true">
        
        <activity android:name="info.brathen.flytid.activities.Arrivals"
                  android:label="@string/app_name"
                  android:screenOrientation="sensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="info.brathen.flytid.activities.Departures"
                  android:label="@string/app_name"
                  android:screenOrientation="sensor" />

        <activity android:name="info.brathen.flytid.activities.FlytidPreferenceActivity"
                  android:label="@string/app_name" />

      </application>

      <uses-permission android:name="android.permission.INTERNET" />
      
      <uses-sdk android:minSdkVersion="2" />
      
</manifest> 